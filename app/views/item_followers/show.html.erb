<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Item Follower #<%= @item_follower.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @item_follower.user_id %></dd>

              <dt>Item</dt>
              <dd><%= @item_follower.item_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/item_followers" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/item_followers/<%= @item_follower.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_item_follower/<%= @item_follower.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
