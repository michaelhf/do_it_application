<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Step #<%= @step.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Item</dt>
              <dd><%= @step.item_id %></dd>

              <dt>Step number</dt>
              <dd><%= @step.step_number %></dd>

              <dt>Completed</dt>
              <dd><%= @step.completed %></dd>

              <dt>User</dt>
              <dd><%= @step.user_id %></dd>

              <dt>Detail</dt>
              <dd><%= @step.detail %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/steps" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/steps/<%= @step.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_step/<%= @step.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
